<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_time_notification_content_view_setting"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50sp"
        android:layout_marginTop="40dp" />

        <EditText
            android:id="@+id/set_time_notification_setting"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:numeric="integer"
            android:ems="10"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/cancel_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/set_time_button_setting"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/button_set_time_setting"
            android:textColor="@android:color/primary_text_dark_nodisable"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="sendNewTimeNotification"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50sp" />

</LinearLayout>